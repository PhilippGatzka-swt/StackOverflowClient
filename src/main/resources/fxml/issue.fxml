<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane accessibleRole="BUTTON" onMouseClicked="#viewIssue" prefHeight="70.0" prefWidth="910.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.resources.fxml.Issue">
   <left>
      <Label text="Title" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="25.0" right="25.0" />
         </BorderPane.margin></Label>
   </left>
   <bottom>
      <HBox alignment="CENTER" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="5.0"/>
         </BorderPane.margin>
         <Label text="Tag1"/>
         <Label text="Tag2"/>
         <Label text="Tag3"/>
      </HBox>
   </bottom>
   <center>
      <HBox nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets right="20.0"/>
         </BorderPane.margin>
         <VBox prefHeight="70.0" prefWidth="100.0">
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@../image/upvote.png"/>
            </ImageView>
            <Label text="Votes"/>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@../image/downvote.png"/>
            </ImageView>
         </VBox>
      </HBox>
   </center>
   <right>
      <Label text="Username" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="25.0" right="25.0" />
         </BorderPane.margin></Label>
   </right>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</BorderPane>
